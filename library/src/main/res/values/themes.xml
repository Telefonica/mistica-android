<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="MisticaTheme" parent="MisticaTheme_Base"/>

    <style name="MisticaTheme_Base" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <item name="colorPrimary">?colorNavigationBarBackground</item>
        <item name="colorPrimaryDark">?colorBrandHigh</item>
        <item name="android:windowBackground">?colorBackground</item>
        <item name="android:textColorPrimary">@color/text_primary_selector</item>
        <item name="android:textColorPrimaryInverse">?colorTextPrimaryInverse</item>
        <item name="android:textColorSecondary">?colorTextSecondary</item>
        <item name="android:textColorSecondaryInverse">?colorTextSecondaryInverse</item>
        <item name="android:colorControlActivated">?attr/colorControlActive</item>
        <item name="colorControlActivated">?attr/colorControlActive</item>
        <item name="android:colorControlNormal">?attr/colorControl</item>

        <item name="android:textAppearance">@style/AppTheme.TextAppearance.Preset3</item>

        <item name="materialButtonStyle">@style/AppTheme.Button.DefaultButton</item>

        <item name="snackbarStyle">@style/Widget.MaterialComponents.Snackbar</item>
        <item name="maxActionInlineWidth" tools:ignore="PrivateResource">
            @dimen/design_snackbar_action_inline_max_width
        </item>

        <item name="tabStyle">@style/AppTheme.Widgets.TabLayout</item>

        <item name="font_family_light">sans-serif-light</item>
        <item name="font_family_regular">sans-serif</item>
        <item name="font_family_medium">sans-serif-medium</item>

        <item name="preset5Font">?font_family_light</item>
        <item name="preset6Font">?font_family_light</item>
        <item name="preset7Font">?font_family_light</item>
        <item name="preset8Font">?font_family_light</item>
    </style>

</resources>