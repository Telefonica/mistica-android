<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="MisticaTheme" parent="Theme.MaterialComponents.Light.NoActionBar">

        <item name="colorPrimary">?colorBrand</item>
        <item name="colorPrimaryDark">?colorBrandDark</item>
        <item name="android:windowBackground">?colorBackground</item>
        <item name="android:textColorPrimary">@color/text_primary_selector</item>
        <item name="android:textColorPrimaryInverse">?colorTextPrimaryInverse</item>
        <item name="android:textColorSecondary">?colorTextSecondary</item>
        <item name="android:textColorSecondaryInverse">?colorTextSecondaryInverse</item>
        <item name="android:colorControlActivated">?colorControlActivated</item>
        <item name="android:colorControlNormal">?attr/colorControl</item>

        <item name="android:textAppearance">@style/AppTheme.TextAppearance.Preset6</item>

        <item name="materialButtonStyle">@style/AppTheme.Button.DefaultButton</item>

        <item name="snackbarStyle">@style/Widget.MaterialComponents.Snackbar</item>
        <item name="maxActionInlineWidth" tools:ignore="PrivateResource">
            @dimen/design_snackbar_action_inline_max_width
        </item>

        <item name="tabStyle">@style/AppTheme.Widgets.TabLayout</item>
    </style>

    <style name="MisticaAlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColorPrimary">?colorTextPrimary</item>
        <item name="buttonBarNeutralButtonStyle">@style/MisticaAlertDialogTheme.Button</item>
        <item name="buttonBarNegativeButtonStyle">@style/MisticaAlertDialogTheme.Button</item>
        <item name="buttonBarPositiveButtonStyle">@style/MisticaAlertDialogTheme.Button</item>
    </style>

    <style name="MisticaAlertDialogTheme.Button" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/btn_colored_borderless_text_material</item>
    </style>

</resources>