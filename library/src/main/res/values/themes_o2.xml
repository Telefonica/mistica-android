<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MisticaTheme.O2" parent="MisticaTheme.O2_Base" />

    <style name="MisticaTheme.O2_Base">

        <!-- Background colors -->
        <item name="colorAppBarBackground">@color/o2_color_white</item>
        <item name="colorBackground">@color/o2_color_white</item>
        <item name="colorBackgroundContainer">@color/o2_color_white</item>
        <item name="colorBackgroundBrand">@color/o2_color_blue_primary</item>
        <item name="colorBackgroundOverlay">@color/o2_color_grey_6_60_alpha</item>
        <item name="colorBackgroundSkeleton">@color/o2_color_grey_2</item>
        <item name="colorBackgroundSkeletonInverse">@color/o2_color_white_20_alpha</item>
        <item name="colorNavigationBarBackground">@color/o2_color_blue_primary</item>
        <item name="colorBackgroundAlternative">@color/o2_color_grey_1</item>
        <item name="colorBackgroundFeedbackBottom">@color/o2_color_blue_primary</item>
        <item name="colorCustomTabsBackground">@color/o2_color_blue_primary</item>

        <item name="colorSkeletonWave">@color/o2_color_grey_2</item>

        <!-- Border colors -->
        <item name="colorBorderLow">@color/o2_color_grey_1</item>
        <item name="colorBorder">@color/o2_color_grey_3</item>
        <item name="colorBorderHigh">@color/o2_color_grey_5</item>
        <item name="colorBorderSelected">@color/o2_color_blue_primary</item>

        <!-- Button colors -->
        <item name="colorButtonDangerBackground">@color/o2_color_pepper</item>
        <item name="colorButtonDangerBackgroundSelected">@color/o2_color_pepper_60</item>

        <item name="colorButtonLinkBackgroundSelected">@color/o2_color_blue_primary_10</item>
        <item name="colorButtonLinkBackgroundInverseSelected">@color/o2_color_white_20_alpha</item>

        <item name="colorButtonPrimaryBackground">@color/o2_color_blue_primary</item>
        <item name="colorButtonPrimaryBackgroundInverse">@color/o2_color_white</item>
        <item name="colorButtonPrimaryBackgroundSelected">@color/o2_color_blue_primary_70</item>
        <item name="colorButtonPrimaryBackgroundInverseSelected">@color/o2_color_blue_primary_30</item>

        <item name="colorButtonSecondaryBorder">@color/o2_color_blue_primary</item>
        <item name="colorButtonSecondaryBackgroundSelected">@color/o2_color_blue_primary_70</item>
        <item name="colorButtonSecondaryBackgroundSelectedInverse">@color/o2_color_white_15_alpha</item>
        <item name="colorButtonSecondaryBorderInverse">@color/o2_color_white</item>
        <item name="colorButtonSecondaryBorderInverseSelected">@color/o2_color_blue_primary_30</item>

        <item name="colorTextButtonPrimary">@color/o2_color_white</item>
        <item name="colorTextButtonPrimaryInverse">@color/o2_color_blue_primary</item>
        <item name="colorTextButtonPrimaryInverseSelected">@color/o2_color_blue_primary_70</item>

        <item name="colorTextButtonSecondary">@color/o2_color_blue_primary</item>
        <item name="colorTextButtonSecondarySelected">@color/o2_color_blue_primary_70</item>
        <item name="colorTextButtonSecondaryInverse">@color/o2_color_white</item>
        <item name="colorTextButtonSecondaryInverseSelected">@color/o2_color_white</item>

        <!-- Tag colors -->
        <item name="successLow">@color/o2_color_green_10</item>
        <item name="warningLow">@color/o2_color_orange_10</item>
        <item name="errorLow">@color/o2_color_pepper_10</item>
        <item name="promoLow">@color/o2_color_purple_10</item>
        <item name="brandLow">@color/o2_color_blue_primary_10</item>

        <item name="successHigh">@color/o2_color_green_80</item>
        <item name="warningHigh">@color/o2_color_orange_75</item>
        <item name="errorHigh">@color/o2_color_pepper_60</item>
        <item name="promoHigh">@color/o2_color_purple</item>

        <!-- Text Links -->
        <item name="colorTextLink">@color/o2_color_blue_primary</item>
        <item name="colorTextLinkInverse">@color/o2_color_white</item>
        <item name="colorTextLinkDanger">@color/o2_color_pepper</item>
        <item name="colorTextLinkSnackbar">@color/o2_color_blue_primary_30</item>

        <!-- Control colors -->
        <item name="colorControl">@color/o2_color_grey_3</item>
        <item name="colorControlActive">@color/o2_color_blue_primary</item>
        <item name="colorControlError">@color/o2_color_pepper</item>
        <item name="colorLoadingBar">@color/o2_color_blue_primary</item>
        <item name="colorLoadingBarBackground">@color/o2_color_grey_1</item>

        <!-- Divider colors -->
        <item name="colorDivider">@color/o2_color_grey_2</item>
        <item name="colorDividerInverse">@color/o2_color_white_20_alpha</item>
        <item name="colorNavigationBarDivider">@color/o2_color_blue_primary</item>

        <!-- Feedback colors -->
        <item name="colorBadge">@color/o2_color_pepper_60</item>
        <item name="colorFeedbackErrorBackground">@color/o2_color_pepper</item>
        <item name="colorFeedbackInfoBackground">@color/o2_color_grey_6</item>

        <!-- Global colors -->
        <item name="colorBrand">@color/o2_color_blue_primary</item>
        <item name="colorBrandHigh">@color/o2_color_blue_primary_70</item>
        <item name="colorInverse">@color/o2_color_white</item>
        <item name="colorNeutralHigh">@color/o2_color_grey_6</item>
        <item name="colorNeutralMedium">@color/o2_color_grey_5</item>
        <item name="colorNeutralLow">@color/o2_color_grey_1</item>
        <item name="colorPromo">@color/o2_color_purple</item>
        <item name="colorHighlight">@color/o2_color_pink</item>

        <!-- Texts colors -->
        <item name="colorTextPrimary">@color/o2_color_grey_6</item>
        <item name="colorTextPrimaryInverse">@color/o2_color_white</item>
        <item name="colorTextSecondary">@color/o2_color_grey_5</item>
        <item name="colorTextSecondaryInverse">@color/o2_color_white</item>

        <!-- State colors -->
        <item name="colorError">@color/o2_color_pepper</item>
        <item name="colorSuccess">@color/o2_color_green</item>
        <item name="colorWarning">@color/o2_color_orange</item>

        <!-- Bars text colors -->
        <item name="colorTextNavigationBarPrimary">@color/o2_color_white</item>
        <item name="colorTextNavigationBarSecondary">@color/o2_color_blue_primary_30</item>
        <item name="colorTextAppBar">@color/o2_color_grey_4</item>
        <item name="colorTextAppBarSelected">@color/o2_color_blue_primary</item>

        <!-- Gradients (assistant, pin fingerprint screens) -->
        <item name="colorGradientBackgroundFirst">?colorBackgroundBrand</item>
        <item name="colorGradientBackgroundSecond">?colorBackgroundBrand</item>
        <item name="colorGradientBackgroundThird">?colorBackgroundBrand</item>
        <item name="colorGradientBackgroundFourth">?colorBackgroundBrand</item>
        <item name="colorLoginLoadingGradientFirst">?colorBackgroundBrand</item>
        <item name="colorLoginLoadingGradientSecond">?colorBackgroundBrand</item>
        <item name="colorLoginLoadingGradientThird">?colorBackgroundBrand</item>
        <item name="colorLoginLoadingGradientFourth">?colorBackgroundBrand</item>

        <!-- Feedbacks -->
        <item name="feedbackScreenSuccessWithGradient">true</item>
        <item name="feedbackScreenSuccessInverse">true</item>
        <item name="feedbackScreenSuccessAnimation">@raw/feedback_success_o2</item>
        <item name="feedbackScreenErrorAnimation">@raw/feedback_error_o2</item>
        <item name="feedbackScreenInfoIcon">@drawable/feedback_info_o2</item>

        <!-- Stepper -->
        <item name="stepperFinishedStepAnimation">@raw/feedback_success_o2</item>

        <!-- Compose -->
        <item name="composeBrand">o2</item>
    </style>

</resources>