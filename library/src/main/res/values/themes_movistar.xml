		<item name="feedbackScreenErrorAnimation">@raw/feedback_error</item>
		<item name="feedbackScreenInfoIcon">@drawable/feedback_info</item>

		<!-- Stepper -->
		<item name="stepperFinishedStepAnimation">@raw/feedback_success</item>

