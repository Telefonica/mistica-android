<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MisticaTheme.Movistar" parent="MisticaTheme.Movistar_Base" />

    <style name="MisticaTheme.Movistar_Base">

        <!-- Background colors -->
        <item name="colorAppBarBackground">@color/movistar_color_white</item>
        <item name="colorBackground">@color/movistar_color_white</item>
        <item name="colorBackgroundContainer">@color/movistar_color_white</item>
        <item name="colorBackgroundBrand">@color/movistar_color_blue</item>
        <item name="colorBackgroundOverlay">@color/movistar_color_grey_6_60_alpha</item>
        <item name="colorBackgroundSkeleton">@color/movistar_color_grey_1</item>
        <item name="colorBackgroundSkeletonInverse">@color/movistar_color_blue_dark</item>
        <item name="colorNavigationBarBackground">@color/movistar_color_blue</item>
        <item name="colorBackgroundAlternative">@color/movistar_color_grey_1</item>
        <item name="colorBackgroundFeedbackBottom">@color/movistar_color_blue</item>

        <item name="colorSkeletonWave">@color/movistar_color_grey_2</item>

        <!-- Border colors -->
        <item name="colorBorderLight">@color/movistar_color_grey_1</item>
        <item name="colorBorder">@color/movistar_color_grey_3</item>
        <item name="colorBorderDark">@color/movistar_color_grey_5</item>
        <item name="colorBorderSelected">@color/movistar_color_green</item>

        <!-- Button colors -->
        <item name="colorButtonDangerBackground">@color/movistar_color_pepper</item>
        <item name="colorButtonDangerBackgroundDisabled">@color/movistar_color_pepper_light30</item>
        <item name="colorButtonDangerBackgroundSelected">@color/movistar_color_pepper_dark</item>

        <item name="colorButtonLinkBackgroundSelected">@color/movistar_color_blue_light10</item>
        <item name="colorButtonLinkBackgroundSelectedInverse">@color/movistar_color_white_20_alpha</item>

        <item name="colorButtonPrimaryBackground">@color/movistar_color_green</item>
        <item name="colorButtonPrimaryBackgroundDisabled">@color/movistar_color_green_light50</item>
        <item name="colorButtonPrimaryBackgroundDisabledInverse">@color/movistar_color_blue_light50</item>
        <item name="colorButtonPrimaryBackgroundInverse">@color/movistar_color_white</item>
        <item name="colorButtonPrimaryBackgroundSelected">@color/movistar_color_green_dark</item>
        <item name="colorButtonPrimaryBackgroundSelectedInverse">@color/movistar_color_blue_light50</item>

        <item name="colorButtonSecondaryBackground">@color/movistar_color_green</item>
        <item name="colorButtonSecondaryBackgroundDisabled">@color/movistar_color_green_light50</item>
        <item name="colorButtonSecondaryBackgroundSelected">@color/movistar_color_green_dark</item>
        <item name="colorButtonSecondaryBorderDisabledInverse">@color/movistar_color_blue_light50</item>
        <item name="colorButtonSecondaryBorderInverse">@color/movistar_color_white</item>
        <item name="colorButtonSecondaryBorderSelectedInverse">@color/movistar_color_blue_light50</item>

        <item name="colorTextButtonPrimary">@color/movistar_color_white</item>
        <item name="colorTextButtonPrimaryDisabled">@color/movistar_color_white</item>
        <item name="colorTextButtonPrimaryInverse">@color/movistar_color_blue</item>
        <item name="colorTextButtonPrimaryInverseDisabled">@color/movistar_color_blue_light30</item>
        <item name="colorTextButtonPrimaryInverseSelected">@color/movistar_color_blue</item>

        <item name="colorTextButtonSecondary">@color/movistar_color_green</item>
        <item name="colorTextButtonSecondaryDisabled">@color/movistar_color_green_light50</item>
        <item name="colorTextButtonSecondarySelected">@color/movistar_color_green_dark</item>
        <item name="colorTextButtonSecondaryInverse">@color/movistar_color_white</item>
        <item name="colorTextButtonSecondaryInverseDisabled">@color/movistar_color_blue_light50</item>
        <item name="colorTextButtonSecondaryInverseSelected">@color/movistar_color_white</item>

        <!-- Text Links -->
        <item name="colorTextLink">@color/movistar_color_blue</item>
        <item name="colorTextLinkInverse">@color/movistar_color_white</item>
        <item name="colorTextLinkDanger">@color/movistar_color_pepper</item>
        <item name="colorTextLinkDangerDisabled">@color/movistar_color_pepper_light30</item>
        <item name="colorTextLinkDisabled">@color/movistar_color_blue_light50</item>
        <item name="colorTextLinkSnackbar">@color/movistar_color_blue_light50</item>

        <!-- Control colors -->
        <item name="colorControl">@color/movistar_color_grey_3</item>
        <item name="colorControlActive">@color/movistar_color_blue</item>
        <item name="colorControlError">@color/movistar_color_pepper</item>
        <item name="colorLoadingBar">@color/movistar_color_blue_light50</item>
        <item name="colorLoadingBarBackground">@color/movistar_color_blue_dark</item>

        <!-- Divider colors -->
        <item name="colorDivider">@color/movistar_color_grey_2</item>
        <item name="colorDividerInverse">@color/movistar_color_blue_dark</item>
        <item name="colorNavigationBarDivider">@color/movistar_color_blue</item>

        <!-- Feedback colors -->
        <item name="colorBadge">@color/movistar_color_pepper_dark</item>
        <item name="colorFeedbackErrorBackground">@color/movistar_color_pepper</item>
        <item name="colorFeedbackInfoBackground">@color/movistar_color_grey_6</item>

        <!-- Global colors -->
        <item name="colorBrand">@color/movistar_color_blue</item>
        <item name="colorBrandDark">@color/movistar_color_blue_dark</item>
        <item name="colorInverse">@color/movistar_color_white</item>
        <item name="colorNeutralHigh">@color/movistar_color_grey_6</item>
        <item name="colorNeutralLow">@color/movistar_color_grey_3</item>
        <item name="colorNeutralMedium">@color/movistar_color_grey_5</item>
        <item name="colorPromo">@color/movistar_color_purple</item>
        <item name="colorHighlight">@color/movistar_color_pink</item>

        <!-- Texts colors -->
        <item name="colorTextPrimary">@color/movistar_color_grey_6</item>
        <item name="colorTextPrimaryInverse">@color/movistar_color_white</item>
        <item name="colorTextSecondary">@color/movistar_color_grey_5</item>
        <item name="colorTextSecondaryInverse">@color/movistar_color_white</item>
        <item name="colorTextDisabled">@color/movistar_color_grey_3</item>
        <item name="colorTextAmount">@color/movistar_color_blue</item>

        <!-- State colors -->
        <item name="colorError">@color/movistar_color_pepper</item>
        <item name="colorSuccess">@color/movistar_color_green</item>
        <item name="colorWarning">@color/movistar_color_egg</item>

        <!-- Bars text colors -->
        <item name="colorTextNavigationBarPrimary">@color/movistar_color_white</item>
        <item name="colorTextNavigationBarSecondary">@color/movistar_color_blue_light30</item>
        <item name="colorTextAppBar">@color/movistar_color_grey_4</item>
        <item name="colorTextAppBarSelected">@color/movistar_color_blue</item>

        <!-- Gradients (assistant, pin fingerprint screens) -->
        <item name="colorGradientBackgroundFirst">?colorBackgroundBrand</item>
        <item name="colorGradientBackgroundSecond">?colorBackgroundBrand</item>
        <item name="colorGradientBackgroundThird">?colorBackgroundBrand</item>
        <item name="colorGradientBackgroundFourth">?colorBackgroundBrand</item>
        <item name="colorLoginLoadingGradientFirst">?colorBrandDark</item>
        <item name="colorLoginLoadingGradientSecond">?colorBrandDark</item>
        <item name="colorLoginLoadingGradientThird">?colorBrandDark</item>
        <item name="colorLoginLoadingGradientFourth">?colorBrandDark</item>

        <!-- Feedbacks -->
        <item name="feedbackScreenSuccessWithGradient">false</item>
        <item name="feedbackScreenSuccessInverse">true</item>
        <item name="feedbackScreenSuccessAnimation">@raw/feedback_success</item>
        <item name="feedbackScreenErrorAnimation">@raw/feedback_error_movistar</item>
        <item name="feedbackScreenInfoIcon">@drawable/feedback_info_movistar</item>

        <!-- Stepper -->
        <item name="stepperFinishedStepAnimation">@raw/feedback_success</item>
    </style>

    <style name="MisticaMovistarProminentOverride">
        <!-- General -->
        <item name="colorPrimary">@color/movistar_prominent_color_blue</item>
        <item name="colorPrimaryDark">@color/movistar_prominent_color_blue_dark</item>
        <item name="colorBrand">@color/movistar_prominent_color_blue</item>
        <item name="colorBackgroundBrand">@color/movistar_prominent_color_blue</item>
        <item name="colorNavigationBarBackground">@color/movistar_prominent_color_blue</item>
        <item name="colorBrandDark">@color/movistar_prominent_color_blue_dark</item>
        <item name="colorDividerInverse">@color/movistar_prominent_color_blue_dark</item>
    </style>

    <!-- Just a copy of the above. As themes do not support multiple inheritance. -->
    <style name="MisticaTheme.Telefonica.Prominent">
        <!-- General -->
        <item name="colorPrimary">@color/movistar_prominent_color_blue</item>
        <item name="colorPrimaryDark">@color/movistar_prominent_color_blue_dark</item>
        <item name="colorBrand">@color/movistar_prominent_color_blue</item>
        <item name="colorBackgroundBrand">@color/movistar_prominent_color_blue</item>
        <item name="colorNavigationBarBackground">@color/movistar_prominent_color_blue</item>
        <item name="colorBrandDark">@color/movistar_prominent_color_blue_dark</item>
        <item name="colorDividerInverse">@color/movistar_prominent_color_blue_dark</item>
    </style>

</resources>
