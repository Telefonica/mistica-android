<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="AppTheme.Widgets.TabLayout" parent="Widget.MaterialComponents.TabLayout">
		<item name="tabTextAppearance">@style/AppTheme.TextAppearance.PresetTabsLabel</item>
		<item name="tabTextColor">@color/tab_text_selector</item>
		<item name="tabBackground">@drawable/tab_indicator</item>
		<item name="tabIconTint">@color/tab_icon_selector</item>
		<item name="tabIndicatorFullWidth">true</item>
		<item name="tabMode">fixed</item>
		<item name="tabGravity">fill</item>
		<item name="tabInlineLabel">true</item>
		<item name="tabPadding">16dp</item>
		<item name="iconEndPadding">8dp</item>
		<item name="tabIndicatorAnimationDuration">300</item>
		<item name="tabIndicatorColor">?attr/colorControlActive</item>
	</style>
</resources>
