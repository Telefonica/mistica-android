        <item name="colorBadge">@color/vivo_color_pepper_dark</item>
        <item name="colorFeedbackErrorBackground">@color/vivo_color_pepper</item>
        <item name="colorFeedbackInfoBackground">@color/vivo_color_grey_6</item>

