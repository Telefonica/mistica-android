<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MisticaTheme.Vivo">

        <!-- Background colors -->
        <item name="colorAppBarBackground">@color/vivo_color_white</item>
        <item name="colorBackground">@color/vivo_color_white</item>
        <item name="colorBackgroundBrand">@color/vivo_color_purple</item>
        <item name="colorBackgroundOverlay">@color/vivo_color_grey_6_60_alpha</item>
