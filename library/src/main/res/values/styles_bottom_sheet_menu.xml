<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="BottomSheetWithBackground" parent="@style/Widget.Design.BottomSheet.Modal">
		<item name="android:background">@drawable/sheet_background</item>
	</style>
	<style name="BaseSheetDialog">
		<item name="android:windowIsFloating">true</item>
		<item name="bottomSheetStyle">@style/BottomSheetWithBackground</item>
		<item name="android:windowBackground">@android:color/transparent</item>
		<item name="android:windowAnimationStyle">@style/SheetDialogAnimation</item>
	</style>

	<style name="SheetDialogTheme" parent="BaseSheetDialog" />

	<style name="SheetDialogAnimation">
		<item name="android:windowEnterAnimation">@anim/mistica_sheet_slide_in_animation</item>
		<item name="android:windowExitAnimation">@anim/mistica_sheet_slide_out_animation</item>
	</style>
</resources>