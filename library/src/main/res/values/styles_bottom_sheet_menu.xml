<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="BottomSheetWithBackground" parent="@style/Widget.Design.BottomSheet.Modal">
		<item name="android:background">@drawable/bottom_sheet_background</item>
	</style>
	<style name="BaseBottomSheetDialog">
		<item name="android:windowIsFloating">true</item>
		<item name="bottomSheetStyle">@style/BottomSheetWithBackground</item>
		<item name="android:windowBackground">@android:color/transparent</item>
		<item name="android:windowAnimationStyle">@style/BottomSheetDialogAnimation</item>
	</style>

	<style name="BottomSheetDialogTheme" parent="BaseBottomSheetDialog" />

	<style name="BottomSheetDialogAnimation">
		<item name="android:windowEnterAnimation">@anim/mistica_bottom_sheet_slide_in_animation</item>
		<item name="android:windowExitAnimation">@anim/mistica_bottom_sheet_slide_out_animation</item>
	</style>
</resources>