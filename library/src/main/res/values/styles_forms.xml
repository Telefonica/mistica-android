<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme.Forms.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@android:color/transparent</item>
        <item name="boxStrokeColor">@android:color/transparent</item>
        <item name="boxCollapsedPaddingTop">8dp</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="hintEnabled">true</item>
        <item name="errorTextColor">?attr/colorError</item>
        <item name="hintTextColor">?attr/colorControlActivated</item>
        <item name="hintTextAppearance">@style/AppTheme.Forms.TextInputLayout.Hint</item>
        <item name="errorTextAppearance">@style/AppTheme.Forms.TextInputLayout.Error</item>
        <item name="helperTextTextAppearance">@style/AppTheme.Forms.TextInputLayout.Helper</item>
        <item name="errorIconDrawable">@null</item>
    </style>

    <style name="AppTheme.Forms.TextInputLayout.EditText.TextArea">
        <item name="android:minLines">4</item>
        <item name="android:maxLines">4</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:gravity">start|top</item>
        <item name="android:minHeight">156dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:lineSpacingExtra">8dp</item>
    </style>

    <style name="AppTheme.Forms.TextInputLayout.Error" parent="TextAppearance.Design.Error">
        <item name="android:textColor">?attr/colorError</item>
        <item name="colorError">?colorError</item>
    </style>

    <style name="AppTheme.Forms.TextInputLayout.Hint" parent="TextAppearance.Design.Hint" />

    <style name="AppTheme.Forms.TextInputLayout.Helper" parent="AppTheme.TextAppearance.Preset8" />

    <style name="AppTheme.Forms.TextInputLayout.Helper.Inverse">
        <item name="android:textColor">?colorTextPrimaryInverse</item>
    </style>

    <style name="AppTheme.Forms.TextInputLayout.Password" parent="AppTheme.Forms.TextInputLayout">
        <item name="passwordToggleEnabled">true</item>
    </style>

    <style name="AppTheme.Forms.TextInputLayout.Dropdown" parent="AppTheme.Forms.TextInputLayout">
        <item name="endIconMode">dropdown_menu</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingEnd">0dp</item>
    </style>

    <style name="AppTheme.Forms.TextInputLayout.EditText" parent="AppTheme.TextAppearance.Preset6">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">56dp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:background">@drawable/bg_textinputedittext</item>
        <item name="android:maxLines">1</item>
        <item name="android:inputType">textCapSentences</item>
    </style>

    <style name="AppTheme.Forms.TextInputLayout.EditText.Password">
        <item name="android:inputType">textPassword</item>
    </style>

    <style name="AppTheme.Forms.TextInputLayout.EditText.Phone">
        <item name="android:inputType">phone</item>
    </style>

    <style name="AppTheme.Forms.TextInputLayout.EditText.Email">
        <item name="android:inputType">textEmailAddress</item>
    </style>

    <style name="AppTheme.Forms.TextInputLayout.EditText.Dropdown">
        <item name="endIconMode">dropdown_menu</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingTop">26dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:focusable">false</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:editable">false</item>
        <item name="android:imeOptions">actionNext</item>
    </style>

    <style name="AppTheme.Forms.CheckBox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:paddingStart">8dp</item>
        <item name="android:gravity">top</item>
        <item name="android:textAppearance">@style/AppTheme.TextAppearance.Preset6</item>
        <item name="android:textColorHighlight">?colorControlHighlight</item>
        <item name="android:textColorLink">@color/text_link_selector</item>
    </style>
</resources>