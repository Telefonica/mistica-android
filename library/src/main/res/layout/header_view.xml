<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="start"
    android:orientation="vertical"
    android:paddingStart="16dp"
    android:paddingTop="32dp"
    android:paddingEnd="32dp"
    android:paddingBottom="24dp"
    tools:parentTag="android.widget.LinearLayout">

    <TextView
        android:id="@+id/header_first_pretitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:ellipsize="end"
        android:focusable="false"
        android:maxLines="1"
        android:textAppearance="@style/AppTheme.TextAppearance.Preset6"
        android:visibility="gone"
        tools:text="First Pretitle"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/header_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:focusable="false"
        android:maxLength="80"
        android:textAppearance="@style/AppTheme.TextAppearance.Preset3"
        tools:text="Title"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/header_second_pretitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:ellipsize="end"
        android:focusable="false"
        android:maxLines="1"
        android:textAppearance="@style/AppTheme.TextAppearance.Preset6"
        android:visibility="gone"
        tools:text="Second Pretitle"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/header_numeral"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:ellipsize="end"
        android:focusable="false"
        android:maxLines="1"
        android:textAppearance="@style/AppTheme.TextAppearance.Preset1"
        android:visibility="gone"
        tools:text="00,00â‚¬"
        tools:visibility="visible" />

    <LinearLayout
        android:id="@+id/header_action_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.telefonica.mistica.button.Button
            android:id="@+id/header_action_button"
            style="@style/AppTheme.Button.DefaultButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:visibility="gone"
            tools:text="Button"
            tools:visibility="visible" />

        <com.telefonica.mistica.button.Button
            android:id="@+id/header_secondary_action_button"
            style="@style/AppTheme.Button.SecondaryButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:visibility="gone"
            tools:text="Secondary Button"
            tools:visibility="visible" />

        <com.telefonica.mistica.button.Button
            android:id="@+id/header_action_button_inverse"
            style="@style/AppTheme.Button.PrimaryButtonInverse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:visibility="gone" />

        <com.telefonica.mistica.button.Button
            android:id="@+id/header_secondary_action_button_inverse"
            style="@style/AppTheme.Button.SecondaryButtonInverse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:visibility="gone" />
    </LinearLayout>

    <TextView
        android:id="@+id/header_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:focusable="true"
        android:maxLines="1"
        android:textAppearance="@style/AppTheme.TextAppearance.Preset6"
        android:visibility="gone"
        tools:text="Subtitle"
        tools:visibility="visible" />
</merge>