<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingTop="32dp"
        android:paddingEnd="32dp"
        android:paddingBottom="24dp"
        tools:parentTag="android.widget.LinearLayout"
        >

    <TextView
        android:id="@+id/header_first_pretitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:focusable="false"
        android:textAppearance="@style/AppTheme.TextAppearance.Preset3"
        android:visibility="gone"
        tools:text="First Pretitle"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/header_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:focusable="false"
        android:maxLength="80"
        android:textAppearance="@style/AppTheme.TextAppearance.Preset6"
        tools:text="Title"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/header_second_pretitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:focusable="false"
        android:textAppearance="@style/AppTheme.TextAppearance.Preset3"
        android:visibility="gone"
        tools:text="Second Pretitle"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/header_numeral"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:ellipsize="end"
        android:focusable="false"
        android:maxLines="1"
        android:textAppearance="@style/AppTheme.TextAppearance.Preset8"
        android:visibility="gone"
        tools:text="00,00â‚¬"
        tools:visibility="visible" />

    <LinearLayout
        android:id="@+id/header_action_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.telefonica.mistica.button.Button
            android:id="@+id/header_action_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:visibility="gone"
            tools:text="Button"
            tools:visibility="visible"
            app:style="PRIMARY"/>

        <com.telefonica.mistica.button.Button
            android:id="@+id/header_secondary_action_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:visibility="gone"
            tools:text="Secondary Button"
            tools:visibility="visible"
            app:style="SECONDARY"/>

        <com.telefonica.mistica.button.Button
            android:id="@+id/header_action_button_inverse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:visibility="gone"
            app:style="PRIMARY_INVERSE"/>

        <com.telefonica.mistica.button.Button
            android:id="@+id/header_secondary_action_button_inverse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:visibility="gone"
            app:style="SECONDARY_INVERSE"/>
    </LinearLayout>

    <FrameLayout
            android:id="@+id/bottom_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            tools:visibility="visible" />

    <TextView
        android:id="@+id/header_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:textAppearance="@style/AppTheme.TextAppearance.Preset3"
        android:visibility="gone"
        tools:text="Subtitle"
        tools:visibility="visible" />
</merge>
