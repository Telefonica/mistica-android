<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="match_parent"
		android:layout_height="match_parent">

	<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:gravity="center_horizontal"
			android:orientation="vertical"
			android:padding="16dp">

		<TextView
				android:id="@+id/title"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="PopOver Tester"
				android:textAppearance="@style/AppTheme.TextAppearance.Display1" />

		<EditText
				android:id="@+id/input_popover_title"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:hint="PopOver Title Text"
				android:importantForAutofill="no"
				android:inputType="text" />

		<EditText
				android:id="@+id/input_popover_message"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:hint="PopOver Message text"
				android:importantForAutofill="no"
				android:inputType="text" />

		<CheckBox
				android:id="@+id/input_popover_checkbox_image"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="Add Image" />

		<com.telefonica.mistica.button.Button
				android:id="@+id/button_create_popover"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_margin="16dp"
				android:text="Test" />

		<com.telefonica.mistica.button.Button
				android:id="@+id/button_create_popover_on_top"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_margin="16dp"
				android:text="Test on top" />

	</LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>