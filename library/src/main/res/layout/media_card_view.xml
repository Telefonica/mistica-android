<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:parentTag="androidx.cardview.widget.CardView">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/media_card_background"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/media_card_media"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            tools:ignore="ContentDescription"
            tools:srcCompat="@tools:sample/avatars" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingTop="8dp"
            android:paddingEnd="16dp"
            android:paddingBottom="24dp">

            <com.telefonica.mistica.tag.TagView
                android:id="@+id/media_card_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:visibility="gone"
                tools:text="HEADLINE"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/media_card_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textAppearance="@style/AppTheme.TextAppearance.Preset8"
                android:visibility="gone"
                tools:text="Text under headline"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/media_card_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textAppearance="@style/AppTheme.TextAppearance.Preset5"
                android:visibility="gone"
                tools:text="Title"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/media_card_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textAppearance="@style/AppTheme.TextAppearance.Preset7"
                android:visibility="gone"
                tools:text="This is a descriotion. Lorem ipsum bla bla bla bla bla"
                tools:visibility="visible" />

            <LinearLayout
                android:id="@+id/media_card_custom_content_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.telefonica.mistica.button.Button
                    android:id="@+id/media_card_primary_button"
                    style="@style/AppTheme.Button.DefaultButton.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:visibility="gone"
                    tools:text="Primary button"
                    tools:visibility="visible" />

                <com.telefonica.mistica.button.Button
                    android:id="@+id/media_card_link_button"
                    style="@style/AppTheme.Button.LinkButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:visibility="gone"
                    tools:text="Link button"
                    tools:visibility="visible" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</merge>