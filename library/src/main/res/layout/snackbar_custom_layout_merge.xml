<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout"
		>

	<TextView
			android:id="@+id/custom_snackbar_text"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			style="@style/AppTheme.TextAppearance.Preset2"
			android:textColor="?colorTextPrimaryInverse"
			android:layout_weight="1"
			android:layout_gravity="center_vertical|start"
			android:paddingTop="@dimen/snackbar_padding_vertical"
			android:paddingBottom="@dimen/snackbar_padding_vertical"
			android:paddingLeft="@dimen/snackbar_padding_horizontal"
			android:paddingRight="@dimen/snackbar_padding_horizontal"
			android:layout_marginEnd="8dp"
			android:ellipsize="end"
			android:maxLines="@integer/snackbar_text_max_lines"
			android:textAlignment="viewStart"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintEnd_toStartOf="@+id/custom_snackbar_action"
			tools:text="Message"
			/>

	<TextView
			android:id="@+id/custom_snackbar_action"
			style="@style/AppTheme.TextAppearance.PresetLink"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginEnd="8dp"
			android:textAlignment="textEnd"
			android:layout_gravity="center_vertical|end"
			android:minWidth="48dp"
			android:textAllCaps="false"
			android:visibility="gone"
			tools:visibility="visible"
			app:flow_horizontalBias="1.0"
			app:layout_constraintStart_toEndOf="@+id/custom_snackbar_text"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintBottom_toBottomOf="parent"
			tools:text="Action"
			/>
</merge>