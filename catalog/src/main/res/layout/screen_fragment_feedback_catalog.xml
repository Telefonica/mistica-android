<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Screen Feedbacks Tester"
            android:textAppearance="@style/AppTheme.TextAppearance.Display1" />

        <Spinner
            android:id="@+id/spinner_feedback_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp" />

        <EditText
            android:id="@+id/input_feedback_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:hint="Feedback Title"
            android:importantForAutofill="no"
            android:inputType="text" />

        <EditText
            android:id="@+id/input_feedback_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:hint="Feedback Subtitle"
            android:importantForAutofill="no"
            android:inputType="text" />

        <EditText
            android:id="@+id/input_feedback_first_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:hint="Feedback First Button Text"
            android:importantForAutofill="no"
            android:inputType="text" />

        <EditText
            android:id="@+id/input_feedback_second_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:hint="Feedback Second Button Text"
            android:importantForAutofill="no"
            android:inputType="text" />

        <CheckBox
            android:id="@+id/check_feedback_second_button_as_link"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="Show second button as link" />

        <CheckBox
            android:id="@+id/check_feedback_is_modal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="Show as modal" />

        <com.telefonica.mistica.button.Button
            android:id="@+id/button_create_feedback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="Show Feedback" />

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>