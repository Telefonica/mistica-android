<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		xmlns:tools="http://schemas.android.com/tools"
		tools:viewBindingIgnore="true"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:padding="16dp"
		>

	<GridLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:useDefaultMargins="true"
			android:padding="16dp"
			android:columnCount="3"
			>

		<com.telefonica.mistica.tag.TagView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_columnWeight="1"
				android:layout_gravity="center"
				android:text="Promotion"
				/>

		<com.telefonica.mistica.tag.TagView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_columnWeight="1"
				android:layout_gravity="center"
				android:text="Info"
				app:tagStyle="info"
				/>

		<com.telefonica.mistica.tag.TagView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_columnWeight="1"
				android:layout_gravity="center"
				android:text="Active"
				app:tagStyle="active"
				/>

		<com.telefonica.mistica.tag.TagView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_columnWeight="1"
				android:layout_gravity="center"
				android:text="Inactive"
				app:tagStyle="inactive"
				/>

		<com.telefonica.mistica.tag.TagView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_columnWeight="1"
				android:layout_gravity="center"
				android:text="Success"
				app:tagStyle="success"
				/>

		<com.telefonica.mistica.tag.TagView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_columnWeight="1"
				android:layout_gravity="center"
				android:text="Warning"
				app:tagStyle="warning"
				/>

		<com.telefonica.mistica.tag.TagView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_columnWeight="1"
				android:layout_gravity="center"
				android:text="Error"
				app:tagStyle="error"
				/>

		<com.telefonica.mistica.tag.TagView
				android:id="@+id/custom_color_tag"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_columnWeight="1"
				android:layout_gravity="center"
				android:text="Custom"
				app:tagStyle="error"
				app:tagTextColor="@color/tag_custom_color_text"
				app:tagBackgroundColor="@color/tag_custom_color_background"
				/>
	</GridLayout>

	<GridLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:useDefaultMargins="true"
			android:padding="16dp"
			android:columnCount="3"
			>

		<com.telefonica.mistica.tag.TagView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_columnWeight="1"
				android:layout_gravity="center"
				android:text="Promotion"
				app:tagIcon="@drawable/icn_cross"
				/>

		<com.telefonica.mistica.tag.TagView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_columnWeight="1"
				android:layout_gravity="center"
				android:text="Info"
				app:tagIcon="@drawable/icn_cross"
				app:tagStyle="info"
				/>

		<com.telefonica.mistica.tag.TagView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_columnWeight="1"
				android:layout_gravity="center"
				android:text="Active"
				app:tagIcon="@drawable/icn_cross"
				app:tagStyle="active"
				/>

		<com.telefonica.mistica.tag.TagView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_columnWeight="1"
				android:layout_gravity="center"
				android:text="Inactive"
				app:tagIcon="@drawable/icn_cross"
				app:tagStyle="inactive"
				/>

		<com.telefonica.mistica.tag.TagView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_columnWeight="1"
				android:layout_gravity="center"
				android:text="Success"
				app:tagIcon="@drawable/icn_cross"
				app:tagStyle="success"
				/>

		<com.telefonica.mistica.tag.TagView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_columnWeight="1"
				android:layout_gravity="center"
				android:text="Warning"
				app:tagIcon="@drawable/icn_cross"
				app:tagStyle="warning"
				/>

		<com.telefonica.mistica.tag.TagView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_columnWeight="1"
				android:layout_gravity="center"
				android:text="Error"
				app:tagIcon="@drawable/icn_cross"
				app:tagStyle="error"
				/>

		<com.telefonica.mistica.tag.TagView
				android:id="@+id/custom_color_tag_with_cross_icon"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_columnWeight="1"
				android:layout_gravity="center"
				android:text="Custom"
				app:tagIcon="@drawable/icn_cross"
				app:tagStyle="error"
				app:tagTextColor="@color/tag_custom_color_text"
				app:tagBackgroundColor="@color/tag_custom_color_background"
				/>
	</GridLayout>

	<View
			android:layout_width="match_parent"
			android:layout_height="2dp"
			android:background="?colorNeutralLow"
			/>


	<com.telefonica.mistica.tag.TagView
			android:id="@+id/regular_tag"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Promotion"
			android:layout_marginTop="16dp"
			android:layout_gravity="center"
			tools:text="@tools:sample/full_names"
			/>

	<com.telefonica.mistica.tag.TagView
			android:id="@+id/regular_with_icon_tag"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="8dp"
			android:layout_gravity="center"
			android:text="Promotion"
			app:tagIcon="@drawable/icn_cross"
			tools:text="@tools:sample/full_names"
			/>

	<com.telefonica.mistica.input.TextInput
			android:id="@+id/textInput"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			app:inputHint="Type Something..."
			app:inputText="Promotion"
			app:inputType="text"
			/>

</LinearLayout>
