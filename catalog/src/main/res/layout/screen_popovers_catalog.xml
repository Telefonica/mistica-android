<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="16dp">

    <com.telefonica.mistica.section.SectionTitleView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:text="PopOver Tester" />

    <com.telefonica.mistica.input.TextInput
        android:id="@+id/input_popover_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:inputType="text"
        app:inputHint="PopOver Title Text"
        app:inputText="Title of the pop over" />

    <com.telefonica.mistica.input.TextInput
        android:id="@+id/input_popover_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:inputType="text"
        app:inputHint="PopOver Message text"
        app:inputText="Popover long description text" />

    <com.telefonica.mistica.input.CheckBoxInput
        android:id="@+id/input_popover_checkbox_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:inputCheckText="Add Image" />

    <com.telefonica.mistica.button.Button
        android:id="@+id/button_create_popover"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Test" />

    <com.telefonica.mistica.button.Button
        android:id="@+id/button_create_popover_on_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Test on top" />

</LinearLayout>
