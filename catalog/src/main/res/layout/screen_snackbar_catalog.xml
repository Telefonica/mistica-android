<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="match_parent"
		android:layout_height="match_parent">

	<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical"
			android:gravity="center_horizontal">

		<TextView
				android:id="@+id/textView"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="SnackBar Tester"
				android:textAppearance="@style/AppTheme.TextAppearance.Display1"
				android:layout_margin="16dp" />

		<EditText
				android:id="@+id/input_snackbar_message"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:hint="SnackBar Message Text"
				android:inputType="text"
				android:importantForAutofill="no"
				android:layout_margin="8dp" />

		<EditText
				android:id="@+id/input_snackbar_action"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:hint="SnackBar Action Text"
				android:inputType="text"
				android:importantForAutofill="no"
				android:layout_margin="8dp" />

		<Spinner
				android:id="@+id/spinner_snackbar_type"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginRight="8dp"
				android:layout_marginLeft="8dp"/>

		<com.telefonica.mistica.button.Button
				android:id="@+id/button_create_snackbar"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Test!"
				android:layout_margin="16dp" />

	</LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>