<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		>

	<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			>

		<com.telefonica.mistica.section.SectionTitleView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="start"
				android:layout_marginStart="16dp"
				android:layout_marginTop="16dp"
				app:sectionTitle="Full Width List"
				/>

		<com.telefonica.mistica.list.MisticaRecyclerView
				android:id="@+id/list"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="8dp"
				android:nestedScrollingEnabled="false"
				android:layout_weight="0.5"
				app:listLayoutType="full_width"
				/>

		<com.telefonica.mistica.section.SectionTitleView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="start"
				android:layout_marginStart="16dp"
				android:layout_marginTop="8dp"
				app:sectionTitle="Boxed List"
				/>

		<com.telefonica.mistica.list.MisticaRecyclerView
				android:id="@+id/boxed_list"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:nestedScrollingEnabled="false"
				android:layout_marginTop="8dp"
				android:layout_weight="0.5"
				app:listLayoutType="boxed"
				/>

		<com.telefonica.mistica.section.SectionTitleView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="start"
				android:layout_marginStart="16dp"
				android:layout_marginTop="8dp"
				app:sectionTitle="Boxed Inverse List"
				/>

		<com.telefonica.mistica.list.MisticaRecyclerView
				android:nestedScrollingEnabled="false"
				android:id="@+id/boxed_inverse_list"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="8dp"
				android:layout_weight="0.5"
				app:listLayoutType="boxed"
				/>

	</LinearLayout>
</androidx.core.widget.NestedScrollView>