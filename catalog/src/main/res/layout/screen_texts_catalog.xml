            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="Caption 1" />

        <TextView
            style="@style/AppTheme.TextAppearance.Caption2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="Caption 2" />

        <TextView
            style="@style/AppTheme.TextAppearance.Caption3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="Caption 3" />

        <TextView
            style="@style/AppTheme.TextAppearance.Caption4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="Caption 4" />

        <TextView
            style="@style/AppTheme.TextAppearance.Sub1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
