            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="Title 3" />

        <TextView
            style="@style/AppTheme.TextAppearance.Headline1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="Headline 1" />

        <TextView
