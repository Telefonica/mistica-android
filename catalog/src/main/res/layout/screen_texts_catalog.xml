            android:text="Sub 1" />

        <TextView
            style="@style/AppTheme.TextAppearance.Sub2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="Sub 2" />

        <TextView
            style="@style/AppTheme.TextAppearance.Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="Body 1" />

        <TextView
            style="@style/AppTheme.TextAppearance.Body2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="Body 2" />

        <TextView
            style="@style/AppTheme.TextAppearance.Body3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="Body 3" />

        <TextView
            style="@style/AppTheme.TextAppearance.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="Title" />

        <TextView
            style="@style/AppTheme.TextAppearance.Title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
